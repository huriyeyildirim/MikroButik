

@model Miktobutik.Models.ResponseModel<List<Miktobutik.Models.ViewModels.ViewProduct>>
<!-- /.row -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürünler</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Id</th>
                            <th>Ürün Adı</th>
                            <th>Stok Adedi</th>
                            <th>Fiyat</th>

                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.result)
                        {
                        <tr>
                            <td>@item.Product.ProductID<td>
                            <td>@item.Product.CategoryID</td>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Product.UnitStock</td>
                            <td>@item.Product.Price</td>
                            <td>
                                <button class="btn btn-danger" onclick="">Sil</button>
                            </td>
                            <td>
                                <button class="btn btn-warning" onclick="">Güncelle</button>
                            </td>
                        </tr>
                         }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<!-- /.row -->
