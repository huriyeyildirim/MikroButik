@{
    ViewData["Title"] = "Home Page";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Linkler</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Starter Page</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Kullanıcılar</h5>

                        <p class="card-text">
                            Kullanıcıları listelemek için tıklayınız
                        </p>

                        <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Kullanıcılar</a>

                    </div>
                </div>

                <div class="card card-primary card-outline">
                    <div class="card-body">
                        <h5 class="card-title">Ürünler</h5>

                        <p class="card-text">
                          Ürünleri listelemek için tıklayınız
                        </p>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Ürünler</a>
                      
                    </div>
                </div><!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <div class="col-lg-6">
                <div class="card">
                  
                    <div class="card-body">
                        <h6 class="card-title">Siparişler</h6>

                        <p class="card-text">Siparişleri listelemek için tıklatınız</p>
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">Siparişler</a>
                    </div>
                </div>

                <div class="card card-primary card-outline">
                    
                    <div class="card-body">
                        <h6 class="card-title">Kategoriler</h6>

                        <p class="card-text">Kategorileri listelemek için tıklayınız</p>
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Kategoriler</a>
                    </div>
                </div>
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
